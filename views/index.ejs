<!DOCTYPE html>
<html lang="en">

<head><%-include('templates/header.ejs')%></head>
<div class="clase">
    <h1>ADMINISTRADOR DE TAREAS </h1>
</div>

<nav class="navbar navbar-expand-lg " >
    <div class="container-fluid" >
      <a class="navbar-brand" href="#">Inicio</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/insert">Agregar</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/buscar">Buscar</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

<body>
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>
                    <%=title%>
                </h1>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Vegetariano</th>
                            <th scope="col">Calorias</th>
                            <th scope="col">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%if(dishes.size> 0){
                            var cont = 1
                            for(const[k,v] of dishes){%>
                            <tr>
                                <td>
                                    <%=cont%>
                                </td>
                                <td><%=v.id%></td>
                                <td><%=v.name%></td>
                                <td><%=v.isVegetarian%></td>
                                <td><%=v.calories%></td>
                                <td><%=v.value%></td>
                                    
                                
                            </tr>
                            <%}cont++%>
                                <%}else{%>
                                    <h3>no hay platos</h3>
                                    <%}%>
                    </tbody>
                </table>

                <a href="/insert" class="btn btn-primary">Agregar Tarea</a>
            </div>
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

    <script src="/js/script.js"></script>
</body>

</html>